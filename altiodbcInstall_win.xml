                                <showWarning>
                                    <text>This package is not suitable for this environment.
OS          : 64-bit
Package  : 32-bit</text>
                                </showWarning>
                            </actionList>
                            <conditionRuleList>
                                <compareText>
                                    <logic>equals</logic>
                                    <text>32</text>
                                    <value>${altibase_compile_bit}</value>
                                </compareText>
                            </conditionRuleList>
                        </if>
                    </actionList>
                    <conditionRuleList>
                        <platformTest>
                            <type>windows-x64</type>
                        </platformTest>
                    </conditionRuleList>
                    <elseActionList>
                        <if>
                            <explanation>check compiled bit</explanation>
